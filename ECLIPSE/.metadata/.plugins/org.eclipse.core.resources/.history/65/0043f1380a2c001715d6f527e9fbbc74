	/* Proposito: 
	 * Prototipo:
	 * Precondiciones: 
	 * Entradas:
	 * Salidas: 
	 * Postcondiciones: 
	 */
	public boolean validaOpcion(String opcion){
		boolean vale=false;
		int parseo=-1;
		
		try{
			parseo=Integer.parseInt(opcion);
		}catch(NumberFormatException error){
			System.out.println("Se esperaba un numero");
		}
		
		if(parseo>=0 && parseo<=8){
			vale=true;
		}
		
		return vale;
	}
	
